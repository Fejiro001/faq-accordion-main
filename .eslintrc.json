{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "camelcase": ["warn", "always"],
    "capitalized-comments": ["warn", "always"],
    "eqeqeq": ["error", "always"]
  }
}

